<template id="scenarios-page">
  <!-- Modal Structure -->
  <div id="params-modal" class="modal">
    <div class="modal-content">
      <h4>Scenario name</h4>
      <div class="row">
        <h5>Parameters</h5>
        <div class="col s3">
          <div id="stages" class="collection">            
          </div>
        </div>
        <div id="params" class="col s9">
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <a class="modal-close waves-effect waves-red btn-flat">Close</a>
      <a id="runPump" class="modal-close waves-effect waves-green btn-flat">Run</a>
    </div>
  </div>  
  <div class="scenarios-page">
    <ul class="collapsible">
    </ul>    
  </div>
</template>

<template id="common-stage-item">
  <a id="common" class="collection-item clickable">Common</a>
</template>

<template id="stage-item">
  <a id="{{id}}" class="collection-item clickable">
    {{name}}
    <div class="switch">
      <label>
        <input type="checkbox">
          <span class="lever"></span>
      </label>
    </div>
  </a>
</template>

<template id="collapsible-item">
  <li id="{{id}}">
    <div class="collapsible-header">
      <i class="material-icons">filter_drama</i>{{name}}
    </div>
    <div class="collapsible-body">
    </div>
  </li>  
</template>

<template id="collapsible-body-item">
  <div id="{{id}}" class="row pumpRow">    
    <div id="buttons" class="col s2">
      <i id="start" class="medium material-icons green-text">play_arrow</i>
      <i id="restart" class="medium material-icons">sync</i>
      <i id="history" class="medium material-icons">view_headline</i>
    </div>
  </div>
</template>

<template id="pump-desc">
  <div id="info" class="col s10">
    <div class="valign-wrapper" >
      <i class="material-icons">filter_drama</i> {{dataCode}} {{name}}
    </div>
    <div>{{comment}}</div>
    <div>
      <span>PumpIdentifier: {{id}}</span>
      <span>Version: {{version}}</span>
    </div>
  </div>
</template>

<!-- Components markup -->
<template id="check">
  <p>
    <label>
      <input type="checkbox" />
      <span>{{desc}}</span>
    </label>
  </p>
</template>